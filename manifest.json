{
  "manifest_version": 3,
  "name": "Jira QA Helper",
  "version": "1.0.0",
  "description": "Автоматическое создание QA-подзадач и их конвертация в Jira",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
